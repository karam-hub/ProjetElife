      <Button fx:id="btnconnecter" layoutX="277.0" layoutY="198.0" mnemonicParsing="false" onAction="#connecter" text="Connecter" textFill="#204eb9">
         <font>
            <Font name="System Bold Italic" size="15.0" />
         </font>
      </Button>
      <ImageView fitHeight="99.0" fitWidth="108.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/lock.png" />
         </image>
      </ImageView>
   </children>
