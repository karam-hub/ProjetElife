    <children>
      <ImageView fitHeight="282.0" fitWidth="392.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/arie.png" />
         </image>
      </ImageView>
      <Label layoutX="128.0" layoutY="23.0" text="Connexion" textFill="RED">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <VBox layoutX="81.0" layoutY="104.0" prefHeight="73.0" prefWidth="284.0">
         <children>
            <HBox prefHeight="40.0" prefWidth="258.0" spacing="60.0">
               <children>
                  <Label prefHeight="27.0" prefWidth="67.0" text="Nom" textFill="#a1842c">
                     <font>
                        <Font name="System Bold Italic" size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtnom" prefHeight="25.0" prefWidth="158.0" promptText="Entrer votre nom" />
               </children>
            </HBox>
            <HBox prefHeight="32.0" prefWidth="282.0" spacing="10.0">
               <children>
                  <Label prefHeight="27.0" prefWidth="118.0" text="Mot de passe" textFill="#a48e32">
